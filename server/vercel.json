{
  "version": 2,
  "builds": [
    {
      "src": "express-backend/**/*.js",
      "use": "@now/node-server"
    },
    {
      "src": "client/build/**",
      "use": "@now/static"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/api/.*",
      "dest": "/express-backend/$1",
      "status": 200
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/$1"
    }
  ],
  "functions": {
    "api/**/*.js": { "runtime": "nodejs12.x", "includeFiles": "api/**/*.js" }
  },
  "install": {
    "include": ["express-backend/package.json", "client/package.json"]
  },
  "build": {
    "env": { "NODE_ENV": "production" },
    "scripts": {
      "build": "npm run build"
    }
  }
}
